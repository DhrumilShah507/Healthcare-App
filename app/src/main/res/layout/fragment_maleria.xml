<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/rectangle_frag_bg"
    tools:context=".Maleria">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maleria"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinnamon"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turmeric"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orange juice"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ginger"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweet lime juice"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grapefruit"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fenugreek seeds"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</FrameLayout>