<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollView"
    android:background="@drawable/rectangle_frag_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Q1"
            style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectangle_que"
            android:gravity="center"
            android:text="Which of the following symptoms are you suffering through?"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="17dp" />



        <CheckBox
            android:id="@+id/fevCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fever"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/FevQue"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </LinearLayout>

        <CheckBox
            android:id="@+id/CouCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cough"

            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/CoughQue"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <CheckBox
            android:id="@+id/WeekCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weakness"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/CoughCh"
            app:layout_constraintTop_toBottomOf="@+id/CoughCh" />

        <CheckBox
            android:id="@+id/PlaCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platelet Down"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/WeekCh"
            app:layout_constraintTop_toBottomOf="@+id/WeekCh" />

        <CheckBox
            android:id="@+id/bjPainCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Joint Pain"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/PlaCh"
            app:layout_constraintTop_toBottomOf="@+id/PlaCh" />

        <CheckBox
            android:id="@+id/headCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headache "
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/bjPainCh"
            app:layout_constraintTop_toBottomOf="@+id/bjPainCh" />

        <CheckBox
            android:id="@+id/DiaCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diarrhoea"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/headCh"
            app:layout_constraintTop_toBottomOf="@+id/headCh" />

        <CheckBox
            android:id="@+id/VomCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vomiting"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/DiaCh"
            app:layout_constraintTop_toBottomOf="@+id/DiaCh" />


        <CheckBox
            android:id="@+id/LBPCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Blood pressure"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/VomCh"
            app:layout_constraintTop_toBottomOf="@+id/VomCh" />

        <CheckBox
            android:id="@+id/RestCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restlessness"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/LBPCh"
            app:layout_constraintTop_toBottomOf="@+id/LBPCh" />

        <CheckBox
            android:id="@+id/CheCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest Pain"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/RestCh"
            app:layout_constraintTop_toBottomOf="@+id/RestCh" />

        <CheckBox
            android:id="@+id/StomCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stomach Pain"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/CheCh"
            app:layout_constraintTop_toBottomOf="@+id/CheCh" />

        <CheckBox
            android:id="@+id/NoSnTCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No taste and No smell"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/StomCh"
            app:layout_constraintTop_toBottomOf="@+id/StomCh" />

        <CheckBox
            android:id="@+id/BreCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty in Breathing"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/MusCh"
            app:layout_constraintTop_toBottomOf="@+id/MusCh" />

        <CheckBox
            android:id="@+id/MusCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Pain"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/NoSnTCh"
            app:layout_constraintTop_toBottomOf="@+id/NoSnTCh" />


        <CheckBox
            android:id="@+id/ThaCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thirst"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/BreCh"
            app:layout_constraintTop_toBottomOf="@+id/BreCh" />

        <Button
            android:id="@+id/NxtBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_btn"
            android:text="Next"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>