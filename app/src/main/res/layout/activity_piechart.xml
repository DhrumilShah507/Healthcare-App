<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_bg"
    tools:context=".PiechartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />


    <TextView
        android:id="@+id/DisPer"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#CFC127"
        android:text="Percentage Ratio Of Possible Disease"
        android:textColor="#F4F4F6"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart" />

    <TextView
        android:id="@+id/covidPer"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Covid19"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisPer" />

    <TextView
        android:id="@+id/CoPer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="#00B0FF"
        android:text="100%"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/covidPer"
        app:layout_constraintTop_toBottomOf="@+id/DisPer" />


    <TextView
        android:id="@+id/MalariaPer"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
         android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Malaria"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CoPer" />

    <TextView
        android:id="@+id/Mal_Par"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="#00B0FF"
        android:layout_gravity="center"
        android:text="100%"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/MalariaPer"
        app:layout_constraintTop_toBottomOf="@+id/CoPer" />


    <TextView
        android:id="@+id/TyPer"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
         android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Typhoid"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MalariaPer" />

    <TextView
        android:id="@+id/Ty_Per"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="#00B0FF"
        android:text="100%"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/TyPer"
        app:layout_constraintTop_toBottomOf="@+id/Mal_Par" />


    <TextView
        android:id="@+id/ChoPer"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
         android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Cholera"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ty_Per" />

    <TextView
        android:id="@+id/Cho_Per"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="#00B0FF"
        android:text="100%"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ChoPer"
        app:layout_constraintTop_toBottomOf="@+id/Ty_Per" />

    <TextView
        android:id="@+id/DenTxt"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
         android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Dengue"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChiTxt" />


    <TextView
        android:id="@+id/Den_Per"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="#00B0FF"
        android:text="100%"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_gravity="center"
        app:layout_constraintStart_toEndOf="@+id/DenTxt"
        app:layout_constraintTop_toBottomOf="@+id/Chi_Per" />


    <TextView
        android:id="@+id/ChiTxt"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
         android:background="@drawable/rectangle_per"
        android:gravity="center"
        android:text="Chikunguniya Virus"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="22sp"
        android:textStyle="bold"

        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChoPer" />

    <TextView
        android:id="@+id/Chi_Per"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="#00B0FF"
        android:text="100%"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ChiTxt"
        app:layout_constraintTop_toBottomOf="@+id/Cho_Per" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:text="Home Remedies"
            android:background="@drawable/rectangle_btn"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryLight"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_1"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_2"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_3"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_4"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_5"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_6"/>

    </LinearLayout>
</ScrollView>